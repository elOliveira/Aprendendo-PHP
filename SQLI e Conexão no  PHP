 $senha =  "123456";

 $comandoSql = $conexao -> prepare(" INSERT INTO tb_usuarios (desloguin,desenha) VALUES (?,?)");
 $comandoSql->bind_param("ss",$login,$senha); // aqui eu to informando que o tipo da var que ? ? vai receber sao strings
